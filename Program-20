%{
#include <stdio.h>
int lineCount = 1;
%}

%%

\n        { printf("\n%3d  ", ++lineCount); }
.         { printf("%s", yytext); }

%%

int main(int argc, char *argv[]) {
    if (argc > 1)
        yyin = fopen(argv[1], "r");
    else {
        printf("Usage: ./a.out <filename.c>\n");
        return 1;
    }

    printf("%3d  ", lineCount);
    yylex();
    return 0;
}

int yywrap() {
    return 1;
}
