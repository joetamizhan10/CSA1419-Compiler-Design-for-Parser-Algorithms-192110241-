%{
#include <stdio.h>
%}

%%

[0-9]+(\.[0-9]+)?   { printf("Constant: %s\n", yytext); }

.|\n                ; 

%%

int main(int argc, char *argv[]) {
    if (argc > 1)
        yyin = fopen(argv[1], "r");
    else {
        printf("Usage: ./a.out <filename.c>\n");
        return 1;
    }

    yylex();
    return 0;
}

int yywrap() {
    return 1;
}
