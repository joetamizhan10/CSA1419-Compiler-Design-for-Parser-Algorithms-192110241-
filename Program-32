%%

(http|https)://(www\.)?[a-zA-Z0-9\-]+\.[a-zA-Z]{2,}    { printf("Valid URL: %s\n", yytext); }
[ \t\n]+                                              ;   /* Ignore whitespace */
.+                                                    { printf("Invalid URL: %s\n", yytext); }

%%

int main() {
    printf("Enter URL(s) to validate (Ctrl+D to stop):\n\n");
    yylex();
    return 0;
}

